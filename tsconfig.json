{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "paths": {
      "@beginner/*": [
        "./src/beginner/*"
      ],
      "@advanced/*": [
        "./src/advanced/*"
      ],
      "@solution/*": [
        "./src/solution/beginner/*",
        "./src/solution/advanced/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "@types/jest"
    ]
  }
}